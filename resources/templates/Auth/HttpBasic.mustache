<?php

namespace {{invokerPackage}}\Auth;

use {{invokerPackage}}\Request;

class HttpBasic implements AuthenticationInterface
{

    private string $username;
    private string $password;

    public function __construct(string $username = '', string $password = '')
    {
        $this->username = $username;
        $this->password = $password;
    }

    /**
     * @return string
     */
    public function getUsername(): string
    {
        return $this->username;
    }

    /**
     * @param string $username
     * @return HttpBasic
     */
    public function setUsername(string $username): HttpBasic
    {
        $this->username = $username;
        return $this;
    }

    /**
     * @return string
     */
    public function getPassword(): string
    {
        return $this->password;
    }

    /**
     * @param string $password
     * @return HttpBasic
     */
    public function setPassword(string $password): HttpBasic
    {
        $this->password = $password;
        return $this;
    }

    public function getAuthenticatedRequest(Request $request): Request
    {
        /** @var Request $altered */
        $altered = $request->withAddedHeader(
            'Authorization',
            'Basic ' . base64_encode("{$this->username}:{$this->password}")
        );

        return $altered;
    }


}